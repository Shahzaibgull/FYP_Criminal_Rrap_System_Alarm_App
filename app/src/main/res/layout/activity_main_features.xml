<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN_BACKGROUND"
    android:padding="23dp"
    tools:context=".Features_Alarm.MainFeatures">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="120dp"
            android:layout_marginEnd="30dp"
            style="@style/Features_DVD_Background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageDVD"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:paddingTop="6dp"
                android:src="@drawable/ic_baseline_video_system_24" />

            <TextView
                android:id="@+id/textDVD"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="DVD Alert"
                style="@style/TEXT_COLOR"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            style="@style/Features_Speedo_Background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSpeedoMeter"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:paddingTop="6dp"
                android:src="@drawable/ic_baseline_speed_24" />

            <TextView
                android:id="@+id/textSpeedoMeter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:text="Speedo Meter Alert"
                style="@style/TEXT_COLOR"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonBack"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:background="@drawable/color_back_button"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="49dp" />

        <TextView
            android:id="@+id/textCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:text="Set Alarms "
            android:textColor="@color/teal_200"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="44dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="120dp"
            android:layout_marginEnd="30dp"
            style="@style/Features_Opendoor_Background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageOpenDoor"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:paddingTop="6dp"
                android:src="@drawable/ic_baseline_car_crash_24" />

            <TextView
                android:id="@+id/textOpenDoor"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Open Door Alert"
                style="@style/TEXT_COLOR"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            style="@style/Features_Sidemirror_Background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSideMirror"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:paddingTop="6dp"
                android:src="@drawable/ic_baseline_tablet_24" />

            <TextView
                android:id="@+id/textSideMirror"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Side Mirror Alert"
                style="@style/TEXT_COLOR"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        style="@style/Features_Intruder_Background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        app:layout_constraintVertical_bias="0.13">

        <ImageView
            android:id="@+id/imageIntruder"
            android:layout_width="109dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:paddingTop="6dp"
            android:src="@drawable/ic_baseline_campaign1_24" />

        <TextView
            android:id="@+id/textIntruder"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingTop="6dp"
            android:text="Intruder Alert"
            style="@style/TEXT_COLOR"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>